<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="pl.potoczak.chatroom.entity.Post">
        <table name="post" schema="chatroom" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id" precision="11"/>
            </id>
            <basic name="text">
                <column name="text" length="1000"/>
            </basic>
            <basic name="date">
                <column name="date" precision="-1"/>
            </basic>
            <many-to-one name="user" optional="true" target-entity="pl.potoczak.chatroom.entity.User">
                <join-column name="id_user" referenced-column-name="id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
